generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = ""
}

model users {
  id String @id @default(uuid()) @unique
  name String @db.VarChar(255)
  email String @db.VarChar(255)
  username String @db.VarChar(255) @default("")
  password String @db.VarChar(255)
  avatar String @default("")
  clerk_id String @db.VarChar(255) @unique @default("")
  detail details?
  work_history work_history[]
  reatedAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  skill skills[]
}

model details {
  id Int @id @default(autoincrement())
  experience String @db.VarChar(255)
  current_orgainsation String @db.VarChar(255)
  role String @db.VarChar(255)
  user_id String @unique
  user users @relation(fields: [user_id] , references: [id])
  city String @db.VarChar(255)
  state String @db.VarChar(255)
  country String @db.VarChar(255)
  bio String @db.VarChar(255)
  achivements String 
  gender String 
  resume String @default("")
  avatar String @default("")
}

model work_history {
  id Int @id @default(autoincrement())
  organisation_name String @db.VarChar(255)
  role String @db.VarChar(255)
  from DateTime 
  to DateTime
  user_id String
  user users @relation(fields: [user_id] ,references: [id])
}

model skills{
  id Int @id @default(autoincrement())
  skill_name String @db.VarChar(300)
  user_id String
  user users @relation(fields: [user_id] , references: [id])
  @@map("skills")
}